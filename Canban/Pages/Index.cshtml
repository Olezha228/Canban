@page
@model IndexModel
@{
    ViewData["Title"] = "Kanban";
}

<div class="kanban-app container">
    <div class="mb-3">
        <div class="row g-2">
            <div class="col-12 col-md-6">
                <input id="newTaskInput" class="form-control" placeholder="New task title" aria-label="New task" />
            </div>
            <div class="col-12 col-md-4">
                <input id="newTaskDesc" class="form-control" placeholder="Optional description" aria-label="Task description" />
            </div>
            <div class="col-12 col-md-2 d-grid">
                <button id="addTaskBtn" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>

    <div class="row kanban-board">
        <div class="col-12 col-md-4 mb-3">
            <h5>To Do</h5>
            <div class="kanban-column" data-status="todo" id="col-todo">
                <!-- cards go here -->
            </div>
        </div>
        <div class="col-12 col-md-4 mb-3">
            <h5>In Progress</h5>
            <div class="kanban-column" data-status="inprogress" id="col-inprogress">
                <!-- cards go here -->
            </div>
        </div>
        <div class="col-12 col-md-4 mb-3">
            <h5>Done</h5>
            <div class="kanban-column" data-status="done" id="col-done">
                <!-- cards go here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Site JS already included in layout -->
}
